    'opencloud_provider' => array(
      'label' => t('Provider'),
      'plural label' => t('Providers'),
      'description' => t('OpenStack providers'),
      'controller class' => 'EntityAPIController',
      'base table' => 'opencloud_provider',
      'fieldable' => TRUE,
      'entity keys' => array(
        'id' => 'provider_id',
        'label' => 'name',
      ),
      'view modes' => array(
        'administrator' => array(
          'label' => t('Administrator'),
          'custom settings' => FALSE,
        ),
        'customer' => array(
          'label' => t('Customer'),
          'custom settings' => FALSE,
        ),
      ),
    ),
  );

  return $entity;
}

